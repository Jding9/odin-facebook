<%= form_with(model: [@post, @comment]) do |form| %>

    <div>
      <%= form.text_area :body %>
    </div>
   
    <div>
      <%= form.hidden_field :post_id, :value => @post.id %>
    </div> 

    <div>
      <%= form.hidden_field :user_id, :value => current_user.id %>
    </div>

    <div>
      <%= form.submit "Post Comment" %>
    </div>

<% end %>
